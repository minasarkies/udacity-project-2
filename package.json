{
  "name": "fwd-project-2-final",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "startmon": "npm run build && nodemon dist/server.js",
    "watch": "rimraf ./dist && tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess 'node ./dist/server.js'",
    "dev-up": "db-migrate up -m ./migrations   --config ./migrations/db-config/dev.json",
    "dev-down": "db-migrate reset -m ./migrations  --config ./migrations/db-config/dev.json",
    "test-up": "db-migrate up -e test -m ./migrations   --config ./migrations/db-config/test.json ",
    "test-down": "db-migrate reset  -e test -m ./migrations  --config ./migrations/db-config/test.json",
    "test": "npm run test-up && cross-env ENV=test jasmine-ts && npm run test-down",
    "lint-fix": "eslint . --ext .ts --fix",
    "tsc": "rimraf ./dist && tsc",
    "lint": "eslint . --ext .ts",
    "jasmine": "jasmine-ts",
    "clean": "npm run prettier & npm run lint",
    "prettier": "prettier --config .prettierrc '**/**/*.js' --write",
    "unittest": "npm run build && npm run jasmine"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "db-migrate-pg": "^1.2.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "rimraf": "^4.1.1",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@ert78gb/jasmine-ts": "^0.3.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.15",
    "@types/jasmine": "^4.3.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "jasmine": "^4.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.20",
    "prettier": "2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
